# MongoDB Configuration
# For development, we'll use a local MongoDB or MongoDB Atlas

# Local MongoDB (if installed)
MONGODB_URI=mongodb://localhost:27017/susin_careers

# OR use MongoDB Atlas (replace with your connection string)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/susin_careers?retryWrites=true&w=majority

# Database Name
DB_NAME=susin_careers

# JWT Secret
JWT_SECRET=susin-group-jwt-secret-2025-change-in-production

# JWT Expiration
JWT_EXPIRES_IN=7d

# Email Configuration
HR_EMAIL=hr@susin.in
FROM_EMAIL=careers@susingroup.com

# Environment
NODE_ENV=development

# Session Configuration
SESSION_SECRET=susin-session-secret-2025-change-in-production
SESSION_EXPIRES_MS=86400000
