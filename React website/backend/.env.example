# MongoDB Configuration
# Replace with your actual MongoDB connection string

# Option 1: MongoDB Atlas (Cloud - Recommended)
# Get from: https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/susin_careers?retryWrites=true&w=majority

# Option 2: Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/susin_careers

# Database Name
DB_NAME=susin_careers

# JWT Secret (Change this to a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
HR_EMAIL=hr@susin.in
FROM_EMAIL=careers@susingroup.com

# Environment
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-session-secret-change-this-in-production
SESSION_EXPIRES_MS=86400000
